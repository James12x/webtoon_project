<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgEpPre2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/slide1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textEpTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imgEpPre"
                android:layout_toRightOf="@+id/imgEpPre"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Prolouge"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textChapterLike2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textGenre"
                android:layout_toEndOf="@+id/imgEpPre"
                android:layout_toRightOf="@+id/imgEpPre"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="345324 Likes"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textChapterNumber2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imgEpPre"
            android:layout_alignParentEnd="false"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="0dp"
            android:text="#20"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineProvider="bounds">

        <ImageView
            android:id="@+id/imgEpPre"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/slide1" />

        <TextView
            android:id="@+id/textChapterLike"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textGenre"
            android:layout_toEndOf="@+id/imgEpPre"
            android:layout_toRightOf="@+id/imgEpPre"
            android:paddingLeft="20dp"
            android:text="345324 Likes"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textGenre"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgEpPre"
            android:layout_toRightOf="@+id/imgEpPre"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Prolouge"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textChapterNumber"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imgEpPre"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:paddingBottom="0dp"
            android:text="#20"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>