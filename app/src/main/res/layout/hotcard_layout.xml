<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="Action" />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textGenre"
                android:layout_alignStart="@+id/textGenre"
                android:layout_below="@+id/textGenre"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="Brothers Bond"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textTitle"
                android:layout_alignStart="@+id/textTitle"
                android:layout_below="@+id/textTitle"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="An exiled pronce and his two blind samurai protectors set ..." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/imagePrev"
                    android:layout_alignLeft="@+id/textDesc"
                    android:layout_alignStart="@+id/textDesc"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_star_black_24dp" />

                <TextView
                    android:id="@+id/textRating"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_weight="100"
                    android:text="TextView"
                    android:textAlignment="textStart" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imagePrev"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_toEndOf="@+id/textGenre"
            android:layout_toRightOf="@+id/textGenre"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:outlineProvider="background"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_autorenew_black_24dp" />

    </LinearLayout>

</LinearLayout>